<% include ../partials/header.ejs %>

  <!-- MAIN CONTENT -->
    <div class="container">
      <div class="innver_content ">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
          <form method="post">
            <div class="form-group">
              <label for="NameTextField">Name</label>
              <input type="text" class="form-control" id="NameTextField"
              name="name" placeholder="Contact Name" required value="<%= contacts.name %>">
            </div>
            <div class="form-group">
              <label for="NumberTextField">Number</label>
              <input type="text" class="form-control" id="NumberTextField"
              name="number" placeholder="Contact Number" required value="<%= contacts.number %>" >
            </div>
            <div class="form-group">
              <label for="EmailTextField">Email</label>
              <input type="text" class="form-control" id="EmailTextField"
              name="email" placeholder="Contact Email" required value="<%= contacts.email %>">
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i>Submit</button>
            <a href="/contacts" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
          </form>
        </div>
      </div>
    </div>
    </div>


